<div class="container">
  <div class="row">
    <div class = "col-xl-8 offset-xl-2 mt-4">
    <H4 style = "background-color: #d3d3d3; width: 15%">投稿一覧</H4>
      <table class = "table mt-4">
        <thead>
          <tr>
            <th>投稿ID</th>
            <th>投稿タイトル</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td>
              <%= link_to admin_post_path(post.id) do %>
                <%= post.name %>
              <% end %>
            </td>
          <% end %>
        </tbody>
      </table>
     </div>
  </div>
  <div class="form-group text-center">
    <%= link_to new_admin_post_path, class: "btn btn-success mt-3" do %>
      投稿新規登録
    <% end %>
  </div>
</div>