<div class="container">
  <div class="row">
    <div class = "col-xl-2 offset-xl-3 mt-4">
      <h4 style = "background-color: #d3d3d3;">投稿新規登録</h4>
      <% if @post.errors.any? %>
      <%= @post.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class = "col-xl-6 offset-xl-3">
      <%= form_with model: @post, url: admin_posts_path, method: :post do |f| %>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 20%;">
            <label>お祭り名</label>
          </div>
          <%= f.text_field :matsuri_name ,class: "form-control name", style: "width: 80%;" %>
        </div>
        <div class="form-group d-flex align-items-center mt-4">
          <div style = "width: 20%;">
            <label>お祭り画像</label>
          </div>
          <%= f.file_field :image, class: "form-control-file image", style: "width: 80%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 20%;">
            <label>開催地域</label>
          </div>
          <%= f.fields_for :prefectures, @prefecture do |prefecture| %>
            <%= prefecture.select :area, Prefecture.areas.keys, {} %>
            
          <% end %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 20%;">
            <label>開催月</label>
          </div>
          <%= f.date_select :season, {:descard_year => true, :discard_day => true} %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 20%;">
            <label>記事</label>
          </div>
          <%= f.text_area :article ,class: "form-control introduction", style: "width: 80%;" %>
        </div>
        <div class="form-group text-center">
          <%= f.submit '投稿新規登録' ,class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>