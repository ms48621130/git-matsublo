<div class="container">
  <div class="row">
    <div class = "col-xl-8 offset-xl-2 mt-4">
    <H4 style = "background-color: #d3d3d3; width: 15%">会員一覧</H4>
      <table class = "table mt-4">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>ユーザーアイコン</th>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= image_tag user.image, style: "width: 80px; height: 80px;" %></td>
            <td>
              <%= link_to admin_user_path(user.id) do %>
                <%= user.name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
     </div>
  </div>
</div>