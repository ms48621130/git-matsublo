<div class="container">
  <div class="row">
    <div class = "col-xl-3 offset-xl-1 mt-4">
      <h4 style = "background-color: #d3d3d3;">
        <%= @user.name %>
        さんの会員詳細
      </h4>
      <div class = "mt-4">
        <%= image_tag @user.image, style: "width: 120px; height: 120px;"%>
      </div>
    </div>
    <div class = "ol-xl-5 offset-xl-1 mt-4">
      <div class="form-group d-flex align-items-center mt-5">
        <span class = "mr-5">会員ID</span>
        <%= @user.id %>
      </div>
      <div class="form-group d-flex align-items-center">
        <span class = "mr-5">ユーザー名</span>
        <%= @user.name %>
      </div>
      <div class="form-group d-flex align-items-center">
        <span class = "mr-5">メールアドレス</span>
        <%= @user.email %>
      </div>
      <div class="form-group d-flex align-items-center mt-5">
        <%= link_to edit_admin_user_path(@user.id) do %>
          <%= submit_tag '編集する' ,class: "btn btn-success mr-5" %>
        <% end %>
        <%= link_to admin_user_reviews_path(@user.id) do %>
          <%= submit_tag 'レビュー履歴一覧を見る' ,class: "btn btn-primary ml-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
