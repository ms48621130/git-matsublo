<!DOCTYPE html>
<html>
  <head>
    <title>Matsublo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
  </head>

  <body class = "d-flex flex-column vh-100">
    <header class = "shadow-sm">
      <nav class = "navbar navbar-expand-lg navbar-dark bg-dark">
        <div class = "container">
          <% if user_signed_in? %>
            <a class = "navbar-brand text-center" href="/">
              <span>matsublo</span>
            </a>
            <h5 class="navbar-brand text-center">ようこそ、<%= current_user.name %>さん！</h5>
          <% else %>
            <a class = "navbar-brand text-center" href="/">
              <span>matsublo</span>
            </a>
          <% end %>
          <% if admin_signed_in? %>
          <li>
            <%= link_to admin_users_path, class: 'nav-link text-light' do %>
            <span>会員一覧</span>
            <% end %>
          </li>
          <li>
            <%= link_to admin_posts_path, class: 'nav-link text-light' do %>
            <span>投稿一覧</span>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-light' do %>
            <span>ログアウト</span>
            <% end %>
          </li>
          <% elsif user_signed_in? %>
          <li>
            <%= link_to user_path(current_user), class: 'nav-link text-light' do %>
            <span>マイページ</span>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
            <span>ログアウト</span>
            <% end %>
          </li>
          <li>
            <%= link_to about_path, class: 'nav-link text-light' do %>
            <span>サイト紹介</span>
            <% end %>
          </li>
          <% else %>
          <li>
            <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
            <span>ログイン</span>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
            <span>新規登録</span>
            <% end %>
          </li>
          <li>
            <%= link_to about_path, class: 'nav-link text-light' do %>
            <span>サイト紹介</span>
            <% end %>
          </li>
          <% end %>
        </div>
      </nav>
    </header>
    <%= yield %>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script>
      var swiper = new Swiper('.swiper-container', {
        navigation: {
          nextEl: '.button-next',
          prevEl: '.button-prev',
        },
      });
    </script>
  </body>
</html>
