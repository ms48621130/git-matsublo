<div class="container">
  <div class="row">
    <div class = "col-xl-6 mt-4">
      <h4 style = "background-color: #d3d3d3; width: 30%;">レビュー編集</h4>
    </div>
  </div>
  <div class="row">
    <div class = "col-xl-6 offset-xl-3">
      <% if @review.errors.any? %>
      <%= @review.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @review, url: user_review_path(@user.id,@review.id), local: true, method: :patch do |f| %>
      <div class="form-group d-flex align-items-center">
        <div style = "width: 20%;">
          <label>タイトル</label>
        </div>
        <%= f.text_field :title, style: "width: 80%;" %>
      </div>
      <div class="form-group d-flex align-items-center">
        <div style = "width: 20%;">
          <label>本文</label>
        </div>
        <%= f.text_area :text, style: "width: 80%;" %>
      </div>
      <div class = "text-center">
        <%= link_to user_review_path(@user.id,@review.id), class: "btn btn-success mt-3" do %>
          変更を保存
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>