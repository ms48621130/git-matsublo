<div class="container">
  <div class="row">
    <div class = "col-xl-9">
      <div class="row">
        <div class = "col-xl-3 mt-4">
          <h4 style = "background-color: #d3d3d3;">会員編集</h4>
        </div>
      </div>
      <% if @user.errors.any? %>
      <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user, url: users_information_path, method: :patch do |f| %>
        <div class="form-group d-flex align-items-center mt-3">
          <div style = "width: 30%;">
            ユーザー名
          </div>
          <%= f.text_field :name ,class: "form-control", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center mt-4">
          <div style = "width: 30%;">
            <label for="user_image">ユーザーアイコン</label>
          </div>
          <%= f.file_field :image, class: "form-control-file image", style: "width: 60%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            メールアドレス
          </div>
          <%= f.text_field :email ,class: "form-control", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            <label for="user_password">パスワード(6文字以上)</label>
          </div>
          <%= f.password_field :password ,class: "form-control name", style: "width: 30%;" %>
        </div>
        <div class = "text-center">
          <%= f.submit "編集内容を保存", class: "btn btn-success mt-5 mr-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>