<div class="container">
  <div class="row">
    <div class = "col-xl-9">
      <div class="row">
        <div class = "col-xl-3 mt-4">
          <h4 style = "background-color: #d3d3d3;">会員編集</h4>
        </div>
      </div>
      <div style = "color :#FF0000; ">
        <% if @user.errors.any? %>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
        <div class="form-group d-flex align-items-center mt-3">
          <div style = "width: 30%;">
            ユーザー名
          </div>
          <%= f.text_field :name ,class: "form-control", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center mt-4">
          <div style = "width: 30%;">
            ユーザーアイコン
          </div>
          <%= f.file_field :image, class: "form-control-file image", style: "width: 50%;" %>
        </div>
        <div class = "text-center mb-4">
          <% if @user.image.present? %>
            <%= image_tag @user.image, style: "width: 120px; height: 120px;" %>
          <% end %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            メールアドレス
          </div>
          <%= f.text_field :email ,class: "form-control", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            <label for="user_password">パスワード(6文字以上)</label>
          </div>
          <%= f.password_field :password ,class: "form-control name", style: "width: 30%;" %>
        </div>
        <div class = "text-center">
          <%= f.submit "編集内容を保存", class: "btn btn-success mt-5 mr-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>